

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <Button
        android:id="@+id/btnIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start" />
    
    <TextView
        android:id="@+id/moisturetext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnIn"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="46dp"
		android:textSize="18sp"        
        android:text="淹水： " />

    <TextView
        android:id="@+id/moisturevalue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/moisturetext1"
        android:layout_alignBottom="@+id/moisturetext1"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/moisturetext1"
        android:textSize="18sp"
        android:text="No" />
    
</RelativeLayout>

